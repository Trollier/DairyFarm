@model List<DairyFarm.Core.DAL.CattleProduction>

@{
    ViewBag.Title = "Encodage des traites";
}

<h2>Encodage des traites</h2>
<h4>@ViewBag.message</h4>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
  
    
    <table class="table table-striped">
        <tr></tr>
        <tr>
            <th>
                Code Cattle
            </th>
            <th>
                Quantité
            </th>
        </tr>

        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <td>
                    <label> @Model[i].Cattle.CodeCattle</label>
                </td>
                <td>
                    <div class="form-group">

                        <div class="col-md-10">
                            @Html.EditorFor(model => model[i].Quantity, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                </td>
            </tr>
        }
    </table>
    <div class="form-group">
        <input type="submit" value="Soumettre" class="btn btn-primary" />
    </div>
}




